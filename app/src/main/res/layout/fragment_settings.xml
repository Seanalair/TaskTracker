<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_fragment"
    android:background="@color/color_settings_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/viewgroup_time_travel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/textview_time_traveled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:text="@string/app_showing_present"/>

        <TextView
            android:id="@+id/textview_control_explainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_time_traveled"
            android:layout_alignStart="@id/textview_time_traveled"
            android:layout_alignEnd="@id/textview_time_traveled"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Use these controls to move the app through time."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_control_explainer"
            android:layout_alignStart="@id/textview_time_traveled"
            android:layout_alignEnd="@id/textview_time_traveled"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_add_week"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="+" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Weeks"/>

                <Button
                    android:id="@+id/button_subtract_week"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="-" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_add_day"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="+" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Day"/>

                <Button
                    android:id="@+id/button_subtract_day"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="-" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_add_hour"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="+" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Hours"/>

                <Button
                    android:id="@+id/button_subtract_hour"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="-" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_add_minute"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="+" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Minutes"/>

                <Button
                    android:id="@+id/button_subtract_minute"
                    android:background="@drawable/cancel_button_background"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"
                    android:text="-" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>